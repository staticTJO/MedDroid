<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="414dp"
        android:layout_height="45dp"
        android:weightSum="1">

        <TextView
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Cough:"
            android:id="@+id/RespiratoryCough" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simulated by suctioning"
            android:id="@+id/RespiratoryCoughSimulatedBySuctioning"
            android:layout_row="0"
            android:layout_column="1"
            android:checked="false"
            android:layout_weight="0.08" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spontaneous"
            android:id="@+id/RespiratoryCoughSpontaneous"
            android:layout_row="0"
            android:layout_column="0"
            android:checked="false" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="87dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="609dp"
                android:layout_height="match_parent"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="170dp"
            android:layout_height="wrap_content">

        </LinearLayout>

        <GridLayout
            android:layout_width="371dp"
            android:layout_height="wrap_content">


        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="461dp"
        android:layout_height="90dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Notes:"
            android:layout_weight="0.14" />

        <EditText
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:id="@+id/RespiratoryCoughNotes"
            android:singleLine="true" />
    </LinearLayout>

</LinearLayout>