<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.03">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Skin (peripheral):"
                android:id="@+id/CardioSkin" />
        </LinearLayout>

        <GridLayout
            android:layout_width="672dp"
            android:layout_height="95dp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pink"
                android:id="@+id/CardioSkinPink"
                android:layout_row="0"
                android:layout_column="0"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pale"
                android:id="@+id/CardioSkinPale"
                android:layout_row="0"
                android:layout_column="1"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jaundiced"
                android:id="@+id/CardioSkinJaundiced"
                android:layout_row="0"
                android:layout_column="2"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flushed"
                android:id="@+id/CardioSkinFlushed"
                android:layout_row="0"
                android:layout_column="3"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mottled"
                android:id="@+id/CardioSkinMottled"
                android:layout_row="0"
                android:layout_column="4"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cyanotic"
                android:id="@+id/CardioSkinCyanotic"
                android:layout_row="0"
                android:layout_column="5"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diaphoretic"
                android:id="@+id/CardioSkinDiaphoretic"
                android:layout_row="0"
                android:layout_column="6"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cold"
                android:id="@+id/CardioSkinCold"
                android:layout_row="1"
                android:layout_column="0"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cool"
                android:id="@+id/CardioSkinCool"
                android:layout_row="1"
                android:layout_column="1"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hot"
                android:id="@+id/CardioSkinHot"
                android:layout_row="1"
                android:layout_column="2"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warm"
                android:id="@+id/CardioSkinWarm"
                android:layout_row="1"
                android:layout_column="3"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dry"
                android:id="@+id/CardioSkinDry"
                android:layout_row="1"
                android:layout_column="4"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moist"
                android:id="@+id/CardioSkinMoist"
                android:layout_row="1"
                android:layout_column="5"
                android:checked="false" />
        </GridLayout>
    </LinearLayout>
</LinearLayout>