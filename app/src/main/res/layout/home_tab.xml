<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homeTab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <!--Tab Content Goes Here-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:text="Welcome Doctor #235806" />


    <TextView
        android:id="@+id/textViewNoPatient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_span="3"
        android:text="There are no patients needing assessment"
        android:layout_weight="0.45"
        android:textAppearance="@android:style/TextAppearance" />

    <TableLayout
        android:id="@+id/home_table"
        android:layout_width="289dp"
        android:layout_height="360dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Doctor_patient_Home_number"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_gravity="center_horizontal"
                android:layout_column="4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/Doctor_patient_Home_info"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_column="24" />

            <TextView
                android:id="@+id/productID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/Doctor_patient_Home_satus"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_column="25" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>


    </TableLayout>

</LinearLayout>