<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.27"
        android:orientation="horizontal"
        android:weightSum="1">

        <include
            layout="@layout/genital"
            android:layout_width="wrap_content"
            android:layout_height="214dp"
            android:layout_weight="0.64" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="475dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/btnCancelGeni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Cancel" />

        <Button
            android:id="@+id/bntSaveExitGeni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnCancelGeni"
            android:layout_toEndOf="@+id/btnCancelGeni"
            android:layout_toRightOf="@+id/btnCancelGeni"
            android:text="Save and Exit" />

        <Button
            android:id="@+id/btnToPhysical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bntSaveExitGeni"
            android:layout_toEndOf="@+id/bntSaveExitGeni"
            android:layout_toRightOf="@+id/bntSaveExitGeni"
            android:text="Next to Physical" />
    </RelativeLayout>
</LinearLayout>